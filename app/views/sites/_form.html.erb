
  <%= form_with model: site, local: true, html: { class: 'custom-form' } do |f| %>
<h2 class="form-title">Add a New Site</h2>

  <div class="form-group">
    <%= f.label :name, "Name for this address", class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address, class: 'form-label' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="add-site flex">
    <%= f.submit 'Add Site', class: 'btn btn-primary' %>
  </div>
<% end %>
