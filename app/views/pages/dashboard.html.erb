<div class='container-dashboard flex mt-3'>


  <div class="menu-bar">
    <div class="menu-bar-body">
      <h5 class="menu-bar-title">Menu</h5>
      <ul class="list-group list-group-flush">

        <li class="list-group-item"><%= link_to "Dashboard", sites_path %></li>
        <li class="list-group-item"><%= link_to "See All Requests", requests_path %></li>
        <li class="list-group-item"><%= link_to "Shifts", shifts_path %></li>
        <li class="list-group-item"><%= link_to "Schedules", schedules_path %></li>
        <li class="list-group-item"><%= link_to "Add a new site", new_site_path %></li>


      </ul>
    </div>
  </div>

  <%= link_to requests_path do %>
  <div class='dash-top-left'>
    <ul>
      <li>You have</li>
      <li><%= Request.where(request_status:nil).count %></li>
      <li>unsolved request<%= Request.where(request_status: nil).count == 1 ? '' : 's'%></li>
    </ul>
  </div>
  <% end %>


  <div class='dash-top-middle'>
    <ul>
      <% if @next_shift %>
        <li>Next shift starts at</li>
        <li><%= @next_shift.start_time.strftime("%H:%M") %></li>
        <li><%= @next_shift.site %></li>
        <li>On duty: <%= @next_shift.user.name %>
      <% else %>
        <li>No upcoming shifts.</li>
      <% end %>
    </ul>



  </div>





  <div class="map" style="width: 70%; height: 450px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>



</div>
